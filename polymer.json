{
  "entrypoint": "index.html",
  "shell": "src/hb-app/hb-app.html",
  "sources": [
    "src/**/*"
   ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "builds": [{
    "xxxpreset": "es5-bundled",
    "name": "default",
    "bundle": {
        "xxxsourcemaps": true,
        "js": { "minify": false, "compile": false },
        "css": { "minify": false },
        "html": { "minify": false },
        "bundle": true,
        "addServiceWorker": false,
        "addPushManifest": false,
        "insertPrefetchLinks": false
    }
  }]
}