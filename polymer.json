{
  "entrypoint": "index.html",
  "shell": "src/hb-app/hb-app.html",
  "sources": [
    "src/**/*",
    "manifest.json"
   ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "builds": [{
    "xxxpreset": "es6-bundled",
    "name": "default",
    "bundle": {
        "sourcemaps": true,
        "js": { "minify": false, "compile": false },
        "css": { "minify": true },
        "html": { "minify": true },
        "bundle": false,
        "addServiceWorker": false,
        "addPushManifest": true,
        "insertPrefetchLinks": true
    }
  }]
}